---
import { Button } from "@/components/ui/button";
import Layout from "@/layouts/Base.astro";
import Graphic from "@/pages/_graphic.astro";
---

<Layout pageTitle="Couldn't find that page...">
    <section id="404" class="grid h-full w-full pb-4 md:grid-cols-2 lg:py-10">
        <div>
            <Graphic class="w-full px-20 py-4" />
        </div>
        <div class="flex flex-col items-center justify-center">
            <h1 class="font-display text-9xl font-bold">404</h1>
            <p class="mb-8 font-display text-xl">
                (That means you got lost...)
            </p>
            <p>
                Need help finding your way... <Button className="h-auto py-1">
                    <a href="/">home?</a>
                </Button>
            </p>
        </div>
    </section>
</Layout>
