---
import Layout from "@/layouts/Base.astro";
import { Button } from "@nextui-org/react";
import { Image } from "astro:assets";
---

<Layout pageTitle="Home">
    <section
        id="eric"
        class="flex flex-col items-center justify-center gap-8 p-8 md:grid md:grid-cols-2"
    >
        <div class="flex flex-col gap-4 text-balance text-center">
            <p class="font-display text-4xl font-bold md:text-5xl">Hey!</p>
            <p class="font-display text-2xl md:text-3xl">
                My name is <span class="font-bold">Eric Wesolick</span>.
            </p>
            <p class="text-xl md:font-light">
                I am a Communications student at the
                University&nbsp;of&nbsp;Mary. Thank you for visiting my
                portfolio!
            </p>
        </div>
        <Image
            src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d7/Malcolm_X_NYWTS_4.jpg/748px-Malcolm_X_NYWTS_4.jpg"
            inferSize
            alt="Eric Wesolick"
            class="max-h-screen w-auto"
        />
    </section>
    <section
        id="about"
        class="flex flex-col-reverse items-center justify-center gap-8 p-8 md:grid md:grid-cols-2"
    >
        <Image
            src="https://images.squarespace-cdn.com/content/v1/67106a05715dec759f6bbb55/f14ff713-1a85-4f64-ae4f-34fac9be7f87/camera+cave.jpeg"
            inferSize
            alt="A camera in a cave"
            class="max-h-screen w-auto"
        />
        <div class="flex flex-col gap-4 text-balance text-center">
            <p class="font-display text-4xl font-bold md:text-5xl">About Me</p>
            <p class="text-xl md:font-light">
                <span class="font-bold"
                    >Connecting to people is the basis of what I do.</span
                > I want to meet people, hear about their lives, and share their
                stories to build community and show humanity through many different
                forms of media. I am passionate about journalism, public speaking,
                writing, and any other kind of media I can use to show who we are
                and what we do.
            </p>
        </div>
    </section>
</Layout>
